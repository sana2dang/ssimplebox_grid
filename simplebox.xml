		</view>

		<view name="basic, detailed, video">
			<image name="bg_overlay" extra="true">
				<tile>false</tile>
				<pos>0 0</pos>
				<origin>0 0</origin>
				<size>1 1</size>
				<path>./art/bg_overlay.png</path>
				<zIndex>34</zIndex>
			</image>
			<image name="md_marquee">
				<pos>0.777083333 0.140</pos>
				<origin>0.5 0.5</origin>
				<maxSize>0.300 0.180</maxSize>
			</image>
			<image name="md_image">
				<pos>0.777083333 0.444444444</pos>
				<maxSize>0.404166667 0.518518519</maxSize>
				<origin>0.5 0.5</origin>
			</image>
			<text name="md_rating">
				<pos>-50 -50</pos>
				<size>0.04 0.03</size>
			</text>
		</view>

		<feature supported="video">
			<view name="video">
				 <video name="md_video">
						<pos>0.777083333 0.444444444</pos>
						<maxSize>0.404166667 0.518518519</maxSize>
						<origin>0.5 0.5</origin>
						<delay>0.0</delay>
						<default></default>
						<showSnapshotNoVideo>true</showSnapshotNoVideo>
						<showSnapshotDelay>false</showSnapshotDelay>
				 </video>
			</view>
		</feature>
		<view name="grid">
			<helpsystem name="help">
				<pos>0.01 0.96</pos>
				<textColor>535353</textColor>
				<iconColor>535353</iconColor>
				<fontSize>0.03</fontSize>
			</helpsystem>
			<image name="footer" extra="true">
				<path>./art/bg_white.jpg</path>
				<color>FFFFFFD8</color>
				<pos>0 1</pos>
				<origin>0 1</origin>
				<size>1 0.05</size>
				<zIndex>13</zIndex>
			</image>				
			<image name="logo-h1" extra="true">
				<path>./art/bg_white.jpg</path>
				<color>FFFFFFD8</color>
				<pos>0 0</pos>
				<origin>0 0</origin>
				<size>1 0.07</size>
				<zIndex>13</zIndex>
			</image>
			<image name="logo">
				<pos>0.5 0.035</pos>
				<origin>0.5 0.5</origin>
				<maxSize>1 0.06</maxSize>
			</image>
			<text name="md_rating">
				<pos>-50 -50</pos>
				<size>0.04 0.03</size>
			</text>
		</view>
		<customView name="Grid Video" inherits="grid">
			<imagegrid name="gamegrid">
				<showVideoAtDelay>200</showVideoAtDelay>
				<autoLayout>4 3</autoLayout>
				<autoLayoutSelectedZoom>1.32</autoLayoutSelectedZoom>
				<imageSource>image</imageSource>
				<margin>0.005 0.010</margin>
				<pos>0 0</pos>
				<size>1 1</size>
				<padding>0.03 0.13 0.03 0.08</padding>
				<zIndex>11</zIndex>
				<animateSelection>true</animateSelection>
			</imagegrid>
			<gridtile name="default">
				<size>0.225 0.254</size>
				<backgroundColor>00000000</backgroundColor>
				<padding>0 0</padding>
				<imageSizeMode>minSize</imageSizeMode>
				<imageColor>FFFFFFAA</imageColor>
			</gridtile>
			<gridtile name="selected">
				<size>0.230 0.259</size>
				<padding>10 10</padding>
				<backgroundColor>FFFFFFFF</backgroundColor>
				<imageColor>FFFFFFFF</imageColor>
			</gridtile>
			<text name="gridtile">
				<color>ffffff</color>
				<backgroundColor>00000090</backgroundColor>
				<fontSize>0.030</fontSize>
				<alignment>center</alignment>
				<size>0 0.2</size>
			</text>
			<text name="gridtile_selected">
				<color>000000</color>
				<fontSize>0.035</fontSize>
				<alignment>center</alignment>
				<glowSize>4</glowSize>
				<glowColor>FFFFFFFF</glowColor>
				<size>0 0.2</size>
			</text>
			
		</customView>
</theme>
